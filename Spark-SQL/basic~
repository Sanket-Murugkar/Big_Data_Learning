CREATE TABLE emp
(
EMPLOYEE_ID INT,FIRST_NAME STRING,LAST_NAME STRING,EMAIL STRING,PHONE_NUMBER STRING,HIRE_DATE STRING,JOB_ID STRING,SALARY INT,MANAGER_ID INT,DEPARTMENT_ID INT
)
ROW FORMAT DELIMITED
FIELDS TERMINATED BY ','
LINES TERMINATED BY '\n'
;



LOAD DATA LOCAL INPATH '/home/vaibhav/dataset/EMP.csv'
INTO TABLE emp;




To load from HDFS


LOAD DATA INPATH 'hdfs://localhost:8020/data/EMp.csv'
INTO TABLE emp;



















